<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center"
    android:theme="@style/Theme.TabTheme"
    android:background="@android:color/transparent">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:layout_marginTop="@dimen/card_margin_top"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    android:layout_marginRight="@dimen/card_margin_right"
    android:layout_marginLeft="@dimen/card_margin_left"
    android:padding="8dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/cardview_bg">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="none"
        app:tabIndicator="@drawable/tabs_indicator_background"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="?android:attr/colorAccent"
        app:tabIconTint="@color/tab_icon_color"
        app:tabTextAppearance="@style/TextAppearance.Tab"
        app:tabMode="scrollable"
        app:tabTextColor="?android:attr/textColorSecondary"/>

  </androidx.cardview.widget.CardView>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
